{
  "compilerOptions": {
    "module": "NodeNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "target": "ES2020",
    "skipLibCheck": true,
    
    "baseUrl": "./",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "app/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "includes": [
    "vite-env.d.ts"
  ]
}
